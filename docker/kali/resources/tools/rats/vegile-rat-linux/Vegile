	echo -ne $okegreen " Create Inject Point Success , "$RESET"Press any key to exit \n\n"
	read anjenglo
	rm tmp/* >> /dev/null 2>&1
  	exit 1
 	 elif [ ! -f "$babe"  ]
			then
		banner;echo " | "
